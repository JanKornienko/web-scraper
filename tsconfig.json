{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["esnext"],
		"strict": true,
		"rootDir": ".",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowJs": true,
		"jsx": "react-jsxdev"
	},
	"include": ["apps/api", "common", "@types/**/*.d.ts", "packages/**/*"],
	"typeRoots": ["./node_modules/@types", "./", "@types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
